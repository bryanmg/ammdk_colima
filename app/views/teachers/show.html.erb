<div class="container">
  <h1 class="title">Dashboard</h1>

  <% if @in_progress_group.present? %>
    <div class="content">
      <div class="notification is-info">
        <button class="delete"></button>
        <%= link_to "#{@in_progress_group.name} group on clases, take attendance!", new_teacher_group_attendance_url(@user, @in_progress_group) %>
      </div>
    </div>
  <% end %>

  <div class="content">
    <div class="columns ">
    
      <div class="column">
        <div class="box content is-medium">
          <div class="media">
            <div class="media-left">
              <span class="title"><%= @total_of_students %></span>
            </div>
            <div class="media-content">
              <i class="fas fa-users"></i>
              <%= link_to "Students", teacher_students_url(@user), class: "has-text-grey-darker"%>
            </div>
          </div>
        </div>
      </div>

      <div class="column">
        <div class="box content is-medium">
          <div class="media">
            <div class="media-left">
              <span class="title"><%= @user.groups.count %></span>
            </div>
            <div class="media-content">
              <i class="fas fa-user-clock"></i>
              Groups
              <%# <%= link_to "Groups", teacher_groups_url(@user), class: "has-text-grey-darker" %>
            </div>
          </div>
        </div>
      </div>

      <div class="column">
        <div class="box content is-medium">
          <div class="media">
            <div class="media-left">
              <span class="title"><%= @user.learning_resources.all.count %></span>
            </div>
            <div class="media-content">
              <i class="fas fa-chalkboard-teacher"></i>
              <%= link_to "Learning Resources", teacher_learning_resources_url(@user), class: "has-text-grey-darker" %>
            </div>
            <div class="media-content">
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

  <div class="content">
    <div class="columns is-mobile">
      <div class="column">
        <div class="buttons are-medium">
          <%= link_to "Create group", new_teacher_group_url(@user), class: "button is-info is-outlined" %>
          <%= link_to "Register student", new_teacher_student_url(@user), class: "button is-info is-outlined" %>
          <%= link_to "View students", teacher_students_url(@user), class: "button is-info is-outlined" %>
          <%= link_to "Register teacher", new_teacher_url, user: @user, class: "button is-info is-outlined" %>
          <%= link_to "My learning resources", teacher_learning_resources_url(@user), class: "button is-info is-outlined" %>
          <%= link_to "Edit my profile", edit_teacher_url(@user), class: "button is-info is-outlined" %>
          <%= link_to "Assign learning resource", new_teacher_students_learning_resource_url(@user), class: "button is-info is-outlined" %>
          <%= link_to "Create learning resource", teacher_learning_resources_url(@user), class: "button is-info is-outlined" %>
          <%= link_to "Review student", new_teacher_review_url(@user), class: "button is-info is-outlined" %>
        </div>
      </div>
    </div>
  </div>

  <h2 class="subtitle">My groups</h2>
  <%= render 'groups', groups: @groups %>

  <br />
</div>
