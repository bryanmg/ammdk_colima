<%= form_with(model: teacher, url: url, method: method) do |form| %>

  <% if teacher.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(teacher.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% teacher.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, value: teacher.name, required: true %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email, value: teacher.email %>
  </div>

  <div>
    <%= form.label :belt, style: "display: block" %>
    <%= form.select :belt, BELTS.keys, value: teacher.belt%>
  </div>

  <div>
    <%= form.label :birth_date, style: "display: block" %>
    <%= form.date_field :birth_date, value: teacher.birth_date %>
  </div>

  <br/>
  <div>
    <%= form.submit %>
  </div>
<% end %>
