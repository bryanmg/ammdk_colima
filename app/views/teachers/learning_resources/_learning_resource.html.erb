<div id="<%= dom_id learning_resource %>">
  <p>
    <strong>Name:</strong>
    <%= learning_resource.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= learning_resource.description %>
  </p>

  <p>
    <strong>Belt:</strong>
    <%= BELTS_TEXT[BELTS.key(learning_resource.belt)] %>
