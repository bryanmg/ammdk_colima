<p style="color: green"><%= notice %></p>

<h1>Groups</h1>

<div id="groups">
  <% @groups.each do |group| %>
    <%= render group %>
    <p>
      <%= link_to "Show this group", user_group_url(user_id: @user.id, id: group.id) %>
    </p>
  <% end %>
</div>

<%= link_to "New group", new_user_group_url(user_id: @user.id) %>
