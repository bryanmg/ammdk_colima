
<div id="<%= dom_id learning_resource %>" class="box">
  <div class="columns">
    <div class="column">
      <p>
        <strong>
        Name: <%= learning_resource.name %>
        </strong>
      </p>
      <p>
        <strong>Description:</strong>
        <%= learning_resource.description %>
      </p>
      <p>
        <strong>Belt required:</strong>
        <%= BELTS_TEXT[BELTS.key(learning_resource.belt)] %>
      </p>

      <div class="is-flex is-justify-content-flex-end mt-4 mr-3">
        <%# <%= link_to(teacher_learning_resource_path(@user, learning_resource), class: "button is-primary is-outlined ml-5") do 
          <i class="far fa-eye"></i>
          <span class="ml-2">Show</span>
        <% end %> 
        <%= link_to(edit_teacher_learning_resource_path(@user, learning_resource), class: "button is-info is-outlined ml-5") do %>
          <i class="far fa-edit"></i>
          <span class="ml-2">Edit</span>
        <% end %>

        <%= button_to(teacher_learning_resource_path(@user, learning_resource), method: :delete, class: "button is-danger is-outlined ml-5") do %>
          <i class="far fa-trash-alt"></i>
          <span class="ml-2">Delete</span>
        <% end %>
      </div>
    </div>

    <div class="column">
      <% if learning_resource.resource.attached? %>
        <p>
          <strong>Resource:</strong>
          <%= render "file_resource/resource", file_resource: learning_resource %>
        </p>
      <% else %>
          <p>
            <span class="tag is-info is-medium is-light">This learning resource has not file attached.</span>
          </p>
      <% end %>
    </div>

  </div>
</div>
