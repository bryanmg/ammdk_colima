<%= form_with(model: group, url: url, method: method) do |form| %>
  <% if group.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
        <% group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= form.label :name, class: "label" %>
    </div>
    <div class="field-body">
      <div class="field">
        <p class="control">
          <%= form.text_field :name, value: group.name, required: true, class: "input" %>
        </p>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= form.label :from_time, class: "label" %>
    </div>
    <div class="field-body">
      <div class="field">
        <p class="control">
          <%= form.time_field :from_time, value: group.from_time&.strftime('%T'), required: true, class: "input" %>
        </p>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= form.label :to_time, class: "label" %>
    </div>
    <div class="field-body">
      <div class="field">
        <p class="control">
          <%= form.time_field :to_time, value: group.to_time&.strftime('%T'), required: true, class: "input" %>
        </p>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= form.label :days_of_the_week, class: "label" %>
    </div>
    <div class="field-body">
      <div class="field pt-2">
        <%= form.fields_for :days_of_the_week do |field| %>
          <label class="checkbox mr-3">
            Sunday
            <%= field.check_box :sunday, { checked: group[:days_of_the_week][:sunday] == "1" ? true : false } %>
          </label>

          <label class="checkbox mr-3">
            Monday
            <%= field.check_box :monday, { checked: group[:days_of_the_week][:monday] == "1" ? true : false } %>
          </label>

          <label class="checkbox mr-3">
            Tuesday
            <%= field.check_box :tuesday, { checked: group[:days_of_the_week][:tuesday] == "1" ? true : false } %>
          </label>

          <label class="checkbox mr-3">
            Wednesday
            <%= field.check_box :wednesday, { checked: group[:days_of_the_week][:wednesday] == "1" ? true : false } %>
          </label>
            
          <label class="checkbox mr-3">
            Thursday
            <%= field.check_box :thursday, { checked: group[:days_of_the_week][:thursday] == "1" ? true : false } %>
          </label>

          <label class="checkbox mr-3">
            Friday
            <%= field.check_box :friday, { checked: group[:days_of_the_week][:friday] == "1" ? true : false } %>
          </label>

          <label class="checkbox mr-3">
            Saturday
            <%= field.check_box :saturday, { checked: group[:days_of_the_week][:saturday] == "1" ? true : false } %>
          </label>
        <% end %>
      </div>
    </div>
  </div>

  <div class="is-flex is-justify-content-flex-end mb-4 mr-3">
    <%= form.submit class: "button is-success is-outlined" %>
  </div>
  
<% end %>
