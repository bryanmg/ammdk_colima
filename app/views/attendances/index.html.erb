<h1>Attendances</h1>

<div id="attendances">
  <% @attendances.each do |attendance| %>
    <%= render attendance %>
    <p>
      <%= link_to "Show this attendance", user_group_attendances_url(@user, @group, attendance) %>
    </p>
  <% end %>
</div>

